      "task": {
        "description": "Task without task_id"
      }
    },
    "expected_error": "task_id"
  },
  "missing_task": {
    "description": "Request missing required task field",
    "data": {
      "task_id": "task-001"
    },
    "expected_error": "task"
  },
  "empty_task_id": {
    "description": "Request with empty string task_id",
    "data": {
      "task_id": "",
      "task": {
        "description": "Task with empty task_id"
      }
    },
    "expected_error": "task_id cannot be empty"
  },
  "whitespace_task_id": {
    "description": "Request with whitespace-only task_id",
    "data": {
      "task_id": "   ",
      "task": {
        "description": "Task with whitespace task_id"
      }
    },
    "expected_error": "task_id cannot be empty"
  },
  "missing_task_description": {
    "description": "Request with task missing description",
    "data": {
      "task_id": "task-002",
      "task": {}
    },
    "expected_error": "description"
  },
  "empty_task_description": {
    "description": "Request with empty task description",
    "data": {
      "task_id": "task-003",
      "task": {
        "description": ""
      }
    },
    "expected_error": "at least 1 character"
  },
  "null_task_id": {
    "description": "Request with null task_id",
    "data": {
      "task_id": null,
      "task": {
        "description": "Task with null task_id"
      }
    },
    "expected_error": "task_id"
  },
  "null_task": {
